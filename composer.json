    "autoload": {
        "psr-4": { 
            "robertsaupe\\Phar\\SelfUpdate\\": "src/"
        }
    },
    "conflict": {
        "padraic/phar-updater": "*"
    },
    "config": {
        "platform": {
            "php": "8.0.0"
        },
        "platform-check": false,
        "sort-packages": true
